<h2>My New Words!</h2>

<% @word_list.each do |word| %>
  <h4><a href="/word/<%= word.id %>"><%= word.term %></a></h4>
<% end %>

<h4>Add a word to the list:</h4>

<form action="/" method="post">
  <div class="form-group">
    <label for="term">Word</label>
    <input id="term" name="term" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="definitions[]">Definition</label>
    <input id="definition_1" name="definitions[]" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="definitions[]">Definition</label>
    <input id="definition_2" name="definitions[]" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="definitions[]">Definition</label>
    <input id="definition_3" name="definitions[]" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add word!</button>
</form>
